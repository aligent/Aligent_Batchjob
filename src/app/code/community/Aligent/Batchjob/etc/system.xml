<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <system>
            <groups>
                <email_logs translate="label comment" module="batchjob">
                    <label>Import Log Email</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>9997</sort_order>
                    <fields>
                        <level translate="label comment">
                            <label>Minimum Log Level</label>
                            <comment>Log messages with this level of importance and higher will be emailed.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>batchjob/system_config_source_log_level</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </level>
                        <email translate="label comment">
                            <label>Email logs To:</label>
                            <comment>Separate multiple email addresses with commas.  Leave empty to stop logs from being emailed.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </email>
                    </fields>
                </email_logs>
            </groups>
        </system>
    </sections>
</config>
